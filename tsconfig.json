{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode for Vite + Vercel */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* RELAXED STRICTNESS SETTINGS */
    "strict": false,               // Disables strict mode (fixes 'never' array inference)
    "noImplicitAny": false,        // Allows 'any' types implicitly
    "strictNullChecks": false,     // More forgiving with null/undefined
    "suppressImplicitAnyIndexErrors": true, // Fixes potential indexing errors
    
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"]
    }
  },
  "include": ["src", "api"],
  "references": [{ "path": "./tsconfig.node.json" }]
}